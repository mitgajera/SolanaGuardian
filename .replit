modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "twitter_bot_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Optimized RugGuard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production RugGuard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RugGuard Webhook Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hybrid RugGuard"

[[workflows.workflow]]
name = "twitter_bot_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install tweepy python-dotenv requests && python main.py"

[[workflows.workflow]]
name = "Optimized RugGuard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 optimized_bot.py"

[[workflows.workflow]]
name = "Production RugGuard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 production_bot.py"

[[workflows.workflow]]
name = "RugGuard Webhook Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 webhook_server.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Hybrid RugGuard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 hybrid_bot.py"

[deployment]
run = ["sh", "-c", "pip install tweepy python-dotenv requests && python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
